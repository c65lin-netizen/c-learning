{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build with GCC",
            "command": "D:\\c++compiler\\mingw64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-O2",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
